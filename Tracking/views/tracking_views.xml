<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tracking_form" model="ir.ui.view">
        <field name="name">tracking.search.form</field>
        <field name="model">tracking.excel</field>
        <field name="arch" type="xml">
            <form string="Busqueda de Tracking">
                <sheet>
                    <group>
                        <group>
                            <field name="tracking_number" placeholder="Ej: MIA0000414xxxxxx"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <button name="search_tracking" string="Buscar" type="object" class="btn-primary"/>
                        </group>
                    </group>
                </sheet>                     
                <footer/>
            </form>
        </field>
    </record>
    <record id="view_tracking_result_wizard_form" model="ir.ui.view">
        <field name="name">tracking.result.wizard.form</field>
        <field name="model">tracking.result.wizard</field>
        <field name="arch" type="xml">
            <form string="Resultado de Tracking">
                <sheet>
                    <group>
                        <field name="result_html" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_close" string="Cerrar" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para la búsqueda -->
    <record id="action_tracking_search" model="ir.actions.act_window">
        <field name="name">Busqueda de Tracking</field>
        <field name="res_model">tracking.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_tracking_form"/>
    </record>

    <!-- Menús -->
    <menuitem 
        id="menu_tracking_main" 
        name="Tracking" 
        sequence="10"
        groups="base.group_user"/>        
    
    <menuitem 
        id="menu_tracking_search" 
        name="Busqueda Tracking" 
        parent="menu_tracking_main"
        action="action_tracking_search"
        sequence="10"
        groups="base.group_user"/>
</odoo>